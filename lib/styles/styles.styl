@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Raleway:400,200,100,300,500,600,700,800,900')

// Hexadecimal Colors
$baseBlue = #102451
$baseGray = #262626
$baseGreen = #90bd24

$lightGray = #575756

$darkerGray = #3c3c3b
$darkerBlue = #05152d

// R.G.B. Colors
$baseBlueRGB = rgba(16, 35, 81, .8)
$baseGrayRGB = rgb(38, 38, 38)

// Modules Colors
$moduleRed = #E00C30
$moduleBlue = #28B6CC
$moduleYellow = #F9B80F
$moduleOrange = #CC530F
$modulePurple = #470B94
$moduleGreen = #69B222

// Colorize
.colorize-red
    color $moduleRed
.colorize-blue
    color $moduleBlue
.colorize-yellow
    color $moduleYellow
.colorize-orange
    color $moduleOrange
.colorize-purple
    color $modulePurple
.colorize-green
    color $moduleGreen

// Backgroundize
.backgroundize-red
    background-color $moduleRed
.backgroundize-blue
    background-color $moduleBlue
.backgroundize-yellow
    background-color $moduleYellow
.backgroundize-orange
    background-color $moduleOrange
.backgroundize-purple
    background-color $modulePurple
.backgroundize-green
    background-color $moduleGreen

//Stylus modules
@import 'travel-mexico'

// Tags
body
  font-family 'Raleway', Helvetica, Arial, sans-serif
  font-size 16px
  padding-top 70px

.nopadding
  padding 0 !important

.paddingtb
    padding 3em 0
    @media only screen and (min-width 320px) and (max-width 479px)
        padding 0
.move-left
  margin-left 32px

.move-top
  margin-top 20px

.move-right
  margin-right 20px
.close-pane,
.close-circuit
    cursor pointer
// Base Styles

.base
    &-list
        padding 0
        margin 0
        list-style-type none
        li
            color $lightGray
            padding 1em 0
            font-size 14px
    &-description
        color $lightGray
        font-size 14px
        font-weight normal
        line-height 1.5em
        padding 1em 0
        max-width 500px
    &-white-description
        color white
        font-size 14px
        font-weight normal
        line-height 1.5em
        padding 1em 0
        max-width 500px
    &-button
        background-color $baseBlue
        color white
        padding 1em 1.5em
        font-size 10px
        font-weight 600
        text-transform uppercase
        &:hover
          text-decoration none
          color white
        span
          margin-left .5em
    &-title
        color $baseBlue
        font-size 32px
        font-weight 800
        text-transform uppercase
        text-align center
        small
          color $baseBlue
          font-weight 300
          display block
    &-white-title
        color white
        font-size 32px
        font-weight 800
        text-transform uppercase
        text-align center
        small
          color white
          font-weight 300
          display block
    &-fullTitle
        background-color $baseBlue
        color white
        font-size 21px
        font-weight 700
        margin 0
        padding .5em 0
        text-align center
        text-transform uppercase
    &-subtitle
        color $baseBlue
        font-size 18px
        font-weight 600
        text-transform uppercase
        margin 0
        padding 1em 0
        line-height 1.5em
    &-white-subtitle
        color white
        font-size 18px
        font-weight 600
        text-transform uppercase
        margin 0
        padding 1em 0
    &-black-subtitle
        color black
        line-height 2em
        font-size 16px
        font-weight 600
        text-transform uppercase
        margin 0
        padding 1em 0
    &-separator
        outline 0
        border 0
        height 2px
        width 40px
        background-color $baseBlue
        margin 0
    &-white-separator
        outline 0
        border 0
        height 2px
        width 40px
        background-color white
        margin 0

// Displays
.display
    &-flex
        display flex
        @media only screen and (min-width 320px) and (max-width 1199px)
            display block
// Header
.header
  background-color $baseBlue
  padding .5em
  text-align right
  display block
  width 100%
  position fixed
  top 0
  left 0
  z-index: 300
  &__icon
    margin-right 6px
  &__logo
    background-color white
    padding .5em
    position absolute
    top 0
    left 36px
    text-align center
    z-index 100
    box-shadow 2px 2px 2px rgba(0,0,0,.3)
    img
      width 80px
      height auto
    a
      display block
    @media only screen and (min-width: 320px) and (max-width: 479px)
        left 5px
  &__links
    padding-top 1em
    padding-bottom 1em
    margin-bottom 0
    margin-right 70px
    li
      &:first-child
        @media only screen and (min-width: 320px) and (max-width: 454px)
          display none
      color white
      font-weight 200
      font-size 14px
      margin-right .5em
      a
        display inline-block
        color white
        font-size 14px
        font-weight 200
        &:hover
          text-decoration none
          font-weight 600
  &__menu
    background-color white
    color $baseBlue
    position absolute
    right 0
    top 0
    width 70px
    height 70px
    display inline-block
    text-align center
    line-height 1.5em
    padding-top 26px
    z-index 300
    span
      font-size 18px
      display block
      cursor pointer
      width 100%
      height 100%

// Navigation
.navigation
  display none
  background-color $baseBlueRGB
  padding 0
  overflow hidden
  position fixed
  width 100%
  z-index 200
  @media only screen and (min-width: 320px) and (max-width: 479px)
    overflow-x scroll
  &__skihouse
    background-color red !important
    &:hover .navigation__links--name
      font-weight normal
      border 2px solid transparent !important
  &__close
    font-size 12px
    padding .5em
    background-color white
    position absolute
    top 12px
    right 12px
    color $baseBlue
    cursor pointer
  &__links
    text-align center
    padding 0
    margin 0
    &--icon
      width 60px
      height auto
      display block
      margin-left auto
      margin-right auto
    &--name
      color white
      text-transform uppercase
      font-weight 300
      display inline-block
      font-size 12px
    li
      padding-top 2em
      padding-left 3em
      padding-right 3em
      padding-bottom 1em
      text-align center
      @media only screen and (min-width: 320px) and (max-width: 479px)
        width 100%
        padding 0
      @media only screen and (min-width: 480px) and (max-width: 779px)
        width: 50%
        float left
      &:hover
        background-color $baseBlue
      &:hover .navigation__links--name
        font-weight 600
        border-bottom 2px solid white
// Video
.video__container
    width 100%
    height 600px
    overflow hidden
video
  object-fit contain
  margin-top -120px

// Discover
.discover
  &__title
    background-color $baseGreen
    padding 2em 0
    text-align center
    color white
    font-size 14px
    text-transform uppercase
    line-height 1.5em
    margin 0
    @media only screen and (min-width 320px) and (max-width 479px)
      padding 2em 1em
  &__visit-mexico
    text-align center
    padding 1em
    @media only screen and (min-width 320px) and (max-width 479px)
      padding 1em 0
    @media only screen and (min-width 480px) and (max-width 768px)
      padding 1em 0
    img
      width 260px
      height auto

// How to travel
.howToTravel
  &__container
    width 100%
    position relative
    img
      width 100%
      height auto
    figcaption
      position absolute
      width 100%
      top 0
      left 0
      text-align center
  &__title
    color white
    text-align center
    padding 3em 0
    font-weight 800
    text-transform uppercase
    margin 0
    @media only screen and (min-width 1600px)
      padding 3.5em 0
      font-size 42px
    @media only screen and (min-width 768px) and (max-width 991px)
      padding 1.8em 0
    @media only screen and (min-width 480px) and (max-width 767px)
      padding 3em 0
    @media only screen and (min-width 320px) and (max-width 479px)
      padding 3.5em 0
      font-size 21px
      line-height 1.5em
    small
      font-weight 300
      color white
      display block
      @media only screen and (min-width 320px) and (max-width 479px)
        display block

  &__tours
    position relative
    img
      width 100%
      height 100%
    &-caption
      position absolute
      bottom 0
      left 0
      padding 3em 2.5em
      display block
      width 100%
      @media only screen and (min-width 768px) and (max-width 991px)
        padding 2em 2.5em
      @media only screen and (min-width 320px) and (max-width 479px)
        text-align center
      &--button
        color white
        font-size 12px
        margin-top 1em
        padding .5em 1.5em
        border 1px solid white
        text-transform uppercase
        transition background-color .5s ease-out
        &:hover
          text-decoration none
          background-color $baseBlue
          color white
      &--title
        color white
        font-size 21px
        text-transform uppercase
        font-weight 600
        @media only screen and (min-width 1600px)
          font-size 42px
        small
          display block
          color white
          text-transform uppercase
          font-weight 200
          font-size 21px
          line-height 1.5em

// Main services

.main-services
  padding 2em 0
  &__name
    text-transform uppercase
    color $baseBlue
    margin 2em 0
    font-weight 300
  ul
    text-align center
    margin-top 2em
    li
      padding 1em 2.5em
      @media only screen and (min-width 320px) and (max-width 479px)
        width 100%
      @media only screen and (min-width 1200px) and (max-width 1399px)
        padding 1em 3em
      @media only screen and (min-width 1400px)
        padding 1em 4.5em
      a
        &:hover
          text-decoration none
        &:hover .main-services__name
          font-weight 700
          color $baseBlue
        &:hover .main-services__icon
          -webkit-filter grayscale(0)
          filter grayscale(0)
      img
        width 60px
        height auto
        -webkit-filter grayscale(100%)
        filter grayscale(100%)
        -webkit-backface-visibility: hidden;
        -webkit-transition: all .6s ease;

// Main Newest

.main-newest
  width 100%
  padding 4em 0
  background url('../images/new-vgala.jpg') no-repeat
  background-size cover
  @media only screen and (min-width 320px) and (max-width 479px)
    padding 2em 0
  &__container
    padding-top 6em
    padding-bottom 6em
    padding-left 3em
    max-width 550px
    text-align right
    @media only screen and (min-width 1600px)
      padding-left 8em
      max-width auto
    @media only screen and (min-width 480px) and (max-width 767px)
      padding 2em
      text-align center
    @media only screen and (min-width 320px) and (max-width 479px)
      padding 1em
      text-align center
  .base-title
    text-align left
    @media only screen and (min-width 320px) and (max-width 767px)
      text-align center
  .base-description
    text-align left
    @media only screen and (min-width 320px) and (max-width 767px)
      text-align center
  .base-button
    margin-right 5em
    @media only screen and (min-width 320px) and (max-width 767px)
      margin-right auto


// Main about

.main-about
  background url('../images/nosotros-vgala.jpg') 50% 50%, center no-repeat
  padding 4em 0
  text-align center
  @media only screen and (min-width 320px) and (max-width 479px)
    padding 1.5em 0
    background none
  .base-description
    margin-left auto
    margin-right auto
    max-width 700px
    strong
      color $baseBlue

// Newsletter
.newsletter
  padding 3em 0
  background url('../images/newsletter-vgala.jpg') 20% 50%, no-repeat
  background-size cover
  &__title
    color white
    font-size 32px
    font-weight 700
    text-transform uppercase
    @media only screen and (min-width 320px) and (max-width 479px)
      font-size 21px
  &__description
    color white
    font-weight 300
    font-size 14px
  &__container
    padding-left 10em
    @media only screen and (min-width 1600px)
      padding-left 16em
    @media only screen and (min-width 992px) and (max-width 1199px)
      padding-left 0
      padding-top 3em
    @media only screen and (min-width 767px) and (max-width 991px)
      padding-left 0
      padding-top 3em
    @media only screen and (min-width 480px) and (max-width 767px)
      padding-left 0
      text-align center
    @media only screen and (min-width 320px) and (max-width 479px)
      padding-left 0
      text-align center
  &__form
    padding-top 1.5em
    input[type="text"], input[type="email"]
      border-radius 0
      color $baseBlue
    input[type="submit"]
      background-color $baseBlue
      border 1px solid white
      color white
      font-weight 600
      font-size 12px
      text-trasnform uppercase
      padding .8em 3em
      margin-top 1.7em
      outline 0
    label
      color white
      font-size 14px
      font-weight 300
      text-transform uppercase


// Main Form
.main
  background url('../images/bgformularioviajesgala.jpg') repeat
  overflow hidden
  .container
    padding 2em 0
  input[type="text"], input[type="number"], input[type="email"],
  select, input[type="date"], input[type="tel"], textarea
    border-radius 0
    background transparent
    color $baseBlue
  &__interested
    text-align center
    color $baseBlue
    text-transform uppercase
    font-size 16px
    font-weight 600
  label
    color $baseBlue
    font-size 14px
    font-weight normal
    padding .5em 0
    text-transform uppercase
  input[type="submit"]
    color $baseBlue
    background-color transparent
    font-size 14px
    font-weight 600
    text-transform uppercase
    border 1px solid $baseBlue
    padding .5em 3.5em
    margin-bottom 2em
  input[disabled]
    color grey
    border-color grey
    span
      margin-right .5em

// Footer

.footer
  &__privacy
    background-color $darkerGray
    padding 1em 0
    color white
    margin 0
    text-align center
    a
        color white
        &:hover
            text-decoration underline
  &__legend
    text-align center
    color white
    background-color $baseBlue
    margin 0
    padding 1em 0
    font-size 16px
    position relative
    @media only screen and (min-width 0) and (max-width 599px)
        padding 1em 0
        margin 0
    &--galatours,
    &--skihouse
        position absolute
        width 160px
        background-color white
        top 0
        padding .5em
        height 64px
        @media only screen and (min-width 0) and (max-width 599px)
            display none
    &--galatours
        left 0
        &:after
            content ''
            background-color white
            display block
            width 50px
            height 64px
            position absolute
            left 80%
            top 0
            transform skewX(30deg)
            @media only screen and (min-width 0) and (max-width 599px)
                display none
        img
            width 45px
            height auto
        @media only screen and (min-width 0) and (max-width 599px)
            display none
    &--skihouse
        right 0
        padding 1em .5em
        &:before
            content ''
            background-color white
            display block
            width 50px
            height 64px
            position absolute
            right 80%
            top 0
            transform skewX(30deg)
            @media only screen and (min-width 0) and (max-width 599px)
                display none
        img
            width 120px
        @media only screen and (min-width 0) and (max-width 599px)
            display none
  &__orange
    text-align center
    color white
    padding 1em 0
    margin 0
    background-color $darkerBlue
    font-size 12px
    font-weight 200
    line-height 1.5em
    a
      color white


// About

.about
    background: url("../images/bg-nosotrosviajesgala.jpg") 50% 100%, center;
    background-size: 100%;
    overflow: hidden;
    background-repeat: no-repeat;
    padding 4em 0
    @media only screen and (min-width 0) and (max-width 1199px)
        background none
        padding 1em 0
    h2.base-title
        padding 1em 0
    &__container
        @media only screen and (min-width 0) and (max-width 1199px)
            text-align center
        p.base-description, hr.base-separator
            @media only screen and (min-width 0) and (max-width 1199px)
                margin-left auto
                margin-right auto


// Scope

.scope
    padding 3em 0
    background-color $baseBlue
    text-align center
    p.base-white-description, hr.base-white-separator
        margin-left auto
        margin-right auto

// Fair

.fair
    &__title
        background-color #d2d2d2
        padding 3em 0
    &__logos
        padding 3em 0
        ul
            text-align center
            padding 0
            margin 0
            li
                margin-right 30px
                &:last-child
                    margin-right 0
                @media only screen and (min-width 0) and (max-width 479px)
                    width 100%
                    padding 1em 0
                @media only screen and (min-width 992px) and (max-width 1499px)
                    margin-right 90px
                @media only screen and (min-width 1500px)
                    margin-right 150px
                img
                    width 120px

// Services
.services
    background: url("../images/bgserv-vgala.jpg") 50% 100%, center;
    background-size: 100%;
    overflow: hidden;
    background-repeat: no-repeat;
    @media only screen and (min-width 0) and (max-width 1199px)
        background none
    h2.base-title
        padding 2em 0
    &__bg--blue
        background-color $baseBlue
    &__bg--gray
        background-color #d2d2d2
    &__item
        padding 2em
        width 50%
        @media only screen and (min-width 320px) and (max-width 767px)
            width 100%
            padding 2em 1em
            display block
        @media only screen and (min-width 768px) and (max-width 1199px)
            display block
            width 100%
            padding 2em 1em
            h3, p
                margin 0
            hr
                margin 20px
        @media only screen and (min-width 1200px) and (max-width 1399px)
            padding 2.5em 2em
        @media only screen and (min-width 1400px) and (max-width 1699px)
            padding 4em 2em
        @media only screen and (min-width 1700px)
            padding 6em 2em
        p.base-description, hr.base-separator, p.base-white-description, hr.base-white-separator
            margin-left auto
            margin-right auto
            text-align center
        hr
            margin 1.5em 0
    &__thumbnail
        width 50%
        @media only screen and (min-width 320px) and (max-width 767px)
            width 100%
            display block
            padding 0
        @media only screen and (min-width 768px) and (max-width 1199px)
            width 100%
            display block
            padding 0
        img
            width 100%
            height 100%
    h6.base-description
        margin-left auto
        margin-right auto
        text-align center
        padding 4em 0
    &-list
        padding 3em 0
        overflow hidden
        &__item
            text-align center
            padding 2em
            p.base-description
                margin-left auto
                margin-right auto
            h3
                font-weight 800
        &__icon
            img
                width 80px
                height auto

// Newest

.newest
    &-block__title
        margin-left auto
        margin-right auto
        background-color $baseBlue
        padding 2em 1em
        max-width 400px
        h6.base-white-description
            margin-left auto
            margin-right auto
            text-align center
    &__galatours
        text-align center
        padding 3em 0
        p.base-description
            margin-left auto
            margin-right auto
    &-thumbnail
        position relative
        overflow hidden
        height 700px
        @media only screen and (min-width 0) and (max-width 549px)
            height auto
            position relative
        &__magic-towns
            background url('../images/newest/pueblosmagicos-vgalatours.jpg') 50% 50%, center no-repeat
            background-size cover
        &__urban-excitment
            background url('../images/newest/urban-vgalatours.jpg') 50% 50%, center no-repeat
            background-size cover
        &__adrenaline-adventure
            background url('../images/newest/aventura-vgalatours.jpg') 50% 50%, center no-repeat
            background-size cover
        &:hover .newest-thumbnail__details
            @media only screen and (min-width 550px)
                opacity 1
                transition opacity 1s ease
        img
            width 100%
            height auto
        &__border
            border-bottom 30px solid $baseBlue
        &__details
            opacity 0
            background $baseBlueRGB
            position absolute
            top 0
            left 0
            width 650px
            height 100%
            padding 1em 2em
            display block
            text-align center
            @media only screen and (min-width 0) and (max-width 649px)
                width 100%
                position static
                padding 1em
                display block
                opacity 1
            h6.base-white-subtitle
                font-size 24px
            p.base-white-description
                margin-left auto
                margin-right auto
                margin-bottom 0
                font-size 14px
                padding .5em 0
            h5
                margin 0 auto
                padding .5em 0
            &--icons
                text-align center
                li
                    padding .5em 1em
                    img
                        width 32px
                        height auto
                    span
                        display block
                        text-align center
                        padding .5em 0
                        font-size 12px
                        font-weight 600
                        color white
            &--list
                padding 0
                text-align left
                @media only screen and (min-width 0) and (max-width 649px)
                    padding 0 1em
                li
                    color white
                    font-size 14px
                    font-weight normal
                    padding .5em

// Contact

.contact-us
    &__container
        background url('../images/bg-contact-vgala.jpg') no-repeat
        background-size cover
        padding 5em 3em
        text-align center
        height 650px

        &--email,
        &--phone
            padding-top 1em
            img
                width 24px
                height auto
    h2
        margin 0
    p
        margin-bottom 0
    hr, p, h6
        margin-left auto
        margin-right auto
        text-align center
        a
            color white

#map
    width 100%
    height 650px
    @media only screen and (min-width 0) and (max-width 991px)
        height 300px

// Pays

.pays
    padding 3em 0 18em 0
    text-align center
    background url('../images/bgpago-vgalatours.jpg') 50% 50%, bottom no-repeat
    background-size cover
    @media only screen and (min-width 0) and (max-width 1199px)
        background none;
        padding 2em 0
    h6, hr, p
        margin-left auto
        margin-right auto
    &__paypal
        padding 3em 0

// Up
.up
    background-color $baseBlue
    box-shadow 1px 1px 1px rgba(0,0,0, .5)
    color white
    display block
    padding-top 1.2em
    position fixed
    top 50%
    margin-top -32px
    width 65px
    height 65px
    border-radius 50%
    right 5px
    z-index 2000
    outline none
    border none
    text-align center
    span
        color white
        text-align center


// Privacy notice
.privacy-notice
    background url(../images/bg-artblog-gala.jpg) no-repeat
    background-size cover
    padding 1em 0
    @media only screen and (min-width 1200px)
        padding 6em 0
    .container
        background-color white
        padding 1em
        text-align center
        @media only screen and (min-width 1200px)
            padding 2em 6em
        .base-title
            margin-bottom 2em
        p, ul li, a
            color $baseGray
            line-height 2em
            text-align left
        a
            color $baseBlue
            font-weight 600
            &:hover
                text-decoration underline
